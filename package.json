{
    "name": "root",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "pnpm --filter docs dev",
        "dev:lib": "pnpm --filter @drdreo/heatmap dev",
        "build": "pnpm --filter @drdreo/heatmap build && pnpm --filter docs build",
        "build:lib": "pnpm --filter @drdreo/heatmap build",
        "build:docs": "pnpm --filter docs build",
        "preview": "pnpm --filter docs preview",
        "test": "pnpm --filter @drdreo/heatmap test",
        "test:run": "pnpm --filter @drdreo/heatmap test:run",
        "test:coverage": "pnpm --filter @drdreo/heatmap test:coverage"
    },
    "devDependencies": {
        "@nx/js": "^22.1.3",
        "@nx/workspace": "^22.1.3",
        "nx": "^22.1.3",
        "prettier": "3.7.4",
        "typescript": "~5.9.3"
    },
    "pnpm": {
        "overrides": {
            "vite": "npm:rolldown-vite@7.2.5"
        }
    }
}
