{
    "name": "@drdreo/heatmap",
    "version": "1.0.0",
    "description": "A lightweight heatmap library for visualizing data intensity",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.mts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsdown",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage"
    },
    "keywords": [
        "heatmap",
        "visualization",
        "canvas",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": ""
    },
    "devDependencies": {
        "@vitest/browser": "^4.0.15",
        "@vitest/browser-playwright": "^4.0.15",
        "@vitest/coverage-v8": "^4.0.15",
        "playwright": "^1.57.0",
        "tsdown": "latest",
        "typescript": "~5.9.3",
        "vite": "npm:rolldown-vite@7.2.5",
        "vitest": "^4.0.15"
    }
}
